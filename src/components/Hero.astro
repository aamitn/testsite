---
import { Icon } from 'astro-icon/components';
import GitHubStats from './GitHubStats.astro';
import { asset } from '../utils/asset';
---

<section class="pt-24 pb-16 md:pt-32 md:pb-24">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center hero-grid">
      <div class="animate-on-scroll">
        <div class="mb-2 inline-flex items-center gap-2 px-3 py-1 rounded-full bg-primary-100 dark:bg-primary-900/30 text-primary-800 dark:text-primary-300 text-sm font-medium">
          <Icon name="mdi:shield-check" class="w-4 h-4" />
          <span>Open Source Privacy Tool</span>
        </div>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight">
          Hide Windows from <span class="gradient-text">Screen Sharing</span> & <span class="gradient-text-variant">Taskbar</span> 
        </h1>
        <p class="text-lg md:text-xl text-gray-700 dark:text-gray-300 mb-8 max-w-2xl">
          WinHider allows you to hide specific windows from screen sharing applications and from the taskbar/task switcher while maintaining visibility on your own screen.
        </p>
        
        <div class="mb-8 flex flex-wrap gap-4 hero-flex">
          <a href="./#download" class="btn-primary px-6 py-3 bg-primary-600 hover:bg-primary-700 text-white rounded-lg font-medium shadow-md hover:shadow-lg transition-all flex items-center gap-2 hover-lift">
            <Icon name="mdi:download" class="w-5 h-5" />
            Download Now
          </a>
          <a href="./docs/introduction" class="btn-secondary px-6 py-3 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-700 text-gray-900 dark:text-white rounded-lg font-medium shadow-sm hover:shadow-md transition-all flex items-center gap-2 hover-lift">
            <Icon name="mdi:book-open" class="w-5 h-5" />
            Documentation
          </a>
        </div>
        
        <div class="copy-command">
          <code>winget install winhider</code>
          <button class="copy-btn" aria-label="Copy command">
            <Icon name="mdi:content-copy" class="w-5 h-5" />
          </button>
        </div>
        
        <div class="mt-6 flex items-center">
          <GitHubStats username="aamitn" repo="winhider" />
          <a href="https://github.com/aamitn/winhider" target="_blank" rel="noopener noreferrer" class="ml-4 flex items-center gap-1 text-sm text-gray-600 dark:text-gray-400 hover:text-primary-600 transition-colors">
            <Icon name="mdi:star" class="w-5 h-5" />
            Star on GitHub
          </a>
        </div>
      </div>
      
      <div class="relative w-[80%] animate-on-scroll overflow-hidden rounded-xl shadow-2xl border border-gray-200 dark:border-gray-800">
        <img 
          src="./images/screenshot.png"
          alt="WinHider working illustration" 
          class="rounded-xl shadow-lg w-full"
          loading="lazy"
        />
        <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent pointer-events-none"></div>
      </div>
    </div>
  </div>
</section>